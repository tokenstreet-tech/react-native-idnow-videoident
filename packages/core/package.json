{
    "name": "@tokenstreet/react-native-idnow-videoident",
    "version": "0.5.0",
    "description": "React Native IDnow VideoIdent bindings for iOS and Android platforms",
    "main": "lib/commonjs/index",
    "module": "lib/module/index",
    "types": "lib/typescript/index.d.ts",
    "react-native": "src/index",
    "source": "src/index",
    "files": [
        "src",
        "lib",
        "android",
        "ios",
        "cpp",
        "tokenstreet-react-native-idnow-videoident.podspec",
        "!lib/typescript/example",
        "!android/build",
        "!ios/build",
        "!**/__tests__",
        "!**/__fixtures__",
        "!**/__mocks__"
    ],
    "scripts": {
        "typescript": "tsc --noEmit",
        "test": "jest",
        "build": "bob build",
        "xcode": "open ios/ReactNativeIdnowVideoident.xcodeproj",
        "release": "release-it"
    },
    "keywords": [
        "react-native",
        "ios",
        "android"
    ],
    "repository": "https://github.com/tokenstreet-tech/react-native-idnow-videoident",
    "author": "Daniel Reichhart <daniel@tokenstreet.com> (https://tokenstreet.com/)",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/tokenstreet-tech/react-native-idnow-videoident/issues"
    },
    "homepage": "https://github.com/tokenstreet-tech/react-native-idnow-videoident#readme",
    "publishConfig": {
        "registry": "https://registry.npmjs.org/"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^4.2.2",
        "@tokenstreet/react-native-idnow-videoident-shared": "^0.0.0",
        "@types/jest": "^27.4.1",
        "@types/react": "^17.0.40",
        "@types/react-native": "0.67.5",
        "jest": "^27.5.1",
        "react": "17.0.2",
        "react-native": "0.68.1",
        "react-native-builder-bob": "^0.18.0",
        "release-it": "^14.12.5",
        "ts-node": "^10.7.0"
    },
    "peerDependencies": {
        "react": "*",
        "react-native": "*"
    },
    "release-it": {
        "git": {
            "commitMessage": "chore: release ${version}",
            "tagName": "v${version}"
        },
        "npm": {
            "publish": true
        },
        "github": {
            "release": true
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular"
            }
        }
    },
    "react-native-builder-bob": {
        "source": "src",
        "output": "lib",
        "targets": [
            "commonjs",
            "module",
            [
                "typescript",
                {
                    "project": "tsconfig.build.json"
                }
            ]
        ]
    }
}
