{
    "private": true,
    "workspaces": {
        "packages": [
            "packages/*"
        ],
        "nohoist": [
            "**/react",
            "**/react-dom",
            "**/react-native",
            "**/react-native/**"
        ]
    },
    "scripts": {
        "typescript": "yarn workspaces run typescript",
        "lint": "eslint .",
        "lint:fix": "yarn lint --fix",
        "test": "yarn workspaces run test",
        "prettier": "prettier --write . --ignore-path ./.prettierignore",
        "prettier:staged": "pretty-quick --staged",
        "uncrustify": "cd ios && find . \\( -name \"*.h\" -o -name \"*.m\" \\) -exec uncrustify -c ../uncrustifyrc.cfg --no-backup {} +",
        "build": "yarn workspaces run build",
        "prepare": "husky install && yarn workspaces run prepare"
    },
    "lint-staged": {
        "*": "prettier --ignore-unknown --write",
        "*.(js|jsx|ts|tsx)": "eslint --fix"
    },
    "devDependencies": {
        "@commitlint/config-conventional": "^16.2.1",
        "@prettier/plugin-ruby": "2.1.0",
        "@prettier/plugin-xml": "2.1.0",
        "@react-native-community/eslint-config": "^3.0.1",
        "@typescript-eslint/eslint-plugin": "^5.15.0",
        "@typescript-eslint/parser": "^5.15.0",
        "commitlint": "^16.2.3",
        "eslint": "^8.11.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-flowtype": "^8.0.3",
        "eslint-plugin-prettier": "^4.0.0",
        "eslint-plugin-react": "^7.29.4",
        "eslint-plugin-react-native": "^4.0.0",
        "eslint-plugin-simple-import-sort": "^7.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.6",
        "prettier": "2.6.2",
        "prettier-plugin-java": "1.6.1",
        "pretty-quick": "^3.1.3",
        "typescript": "^4.6.3"
    }
}
